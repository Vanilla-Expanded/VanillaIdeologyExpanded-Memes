      <li>Guilty</li>
    </conflictingMemes>
    <associatedMemes>
      <li>VME_Egalitarian</li>
     
    </associatedMemes>
    <statFactors>
      <CertaintyLossFactor>0.2</CertaintyLossFactor>
    </statFactors>
