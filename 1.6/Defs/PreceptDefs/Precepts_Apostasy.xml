    <displayOrderInIssue>-10</displayOrderInIssue>
    
    <associatedMemes>
      <li>VME_HardcoreIndustrialism</li>
  
    </associatedMemes>
    <statFactors>
      <CertaintyLossFactor>3</CertaintyLossFactor>
    </statFactors>
   
  </PreceptDef>
  
  <PreceptDef>
