<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Issues -->


	<IssueDef>
		<defName>VME_Sweets</defName>
		<label>sweets</label>
		<iconPath>UI/Issues/Sweets</iconPath>
	</IssueDef>

	<HistoryEventDef>
		<defName>VME_AteSimpleDessert</defName>
		<label>ate simple dessert</label>
