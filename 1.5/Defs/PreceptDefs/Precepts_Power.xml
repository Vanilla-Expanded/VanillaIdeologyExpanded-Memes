<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<IssueDef>
		<defName>VME_Power</defName>
		<label>power</label>
		<iconPath>UI/Issues/Power</iconPath>
	</IssueDef>
	<!-- Precepts -->
	<PreceptDef>
		<defName>VME_Power_Exalted</defName>
		<issue>VME_Power</issue>
		<label>exalted</label>
		<description>I am righteousness! I am no mere king—I have ascended to godhood! Bow before me, or atone with your life.</description>
		<impact>Medium</impact>
		<displayOrderInIssue>50</displayOrderInIssue>
		<displayOrderInImpact>100</displayOrderInImpact>
		<associatedMemes>
			<li>VME_GodEmperor</li>
		</associatedMemes>
		<requiredMemes>
			<li>VME_GodEmperor</li>
		</requiredMemes>
		<comps>
			<li Class="PreceptComp_SituationalThought">
				<thought>VME_Power_Exalted</thought>
				<thoughtStageDescriptions>
					<li>Leader</li>
				</thoughtStageDescriptions>
			</li>
		</comps>
	</PreceptDef>
	<ThoughtDef>
		<defName>VME_Power_Exalted</defName>
		<thoughtClass>Thought_Situational</thoughtClass>
		<workerClass>VanillaMemesExpanded.ThoughtWorker_Precept_Power_Exalted</workerClass>
		<stages>
			<li>
				<label>divine rule</label>
				<description>My rule is supreme, for I am godlike.</description>
				<baseMoodEffect>30</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<PreceptDef>
		<defName>VME_Power_Desired</defName>
		<issue>VME_Power</issue>
		<label>desired</label>
		<description>Craving to be one of the powerful elite is a very understandable desire and should not be looked down upon.</description>
		<impact>Medium</impact>
		<displayOrderInIssue>40</displayOrderInIssue>
		<displayOrderInImpact>100</displayOrderInImpact>
		<associatedMemes>
			<li>VME_Aristocratic</li>
		</associatedMemes>
		<comps>
			<li Class="PreceptComp_SituationalThought">
				<thought>VME_Power_Desired</thought>
				<thoughtStageDescriptions>
					<li>Leader and moralist</li>
				</thoughtStageDescriptions>
			</li>
		</comps>
	</PreceptDef>
	<ThoughtDef>
		<defName>VME_Power_Desired</defName>
		<thoughtClass>Thought_Situational</thoughtClass>
		<workerClass>VanillaMemesExpanded.ThoughtWorker_Precept_Power_Desired</workerClass>
		<stages>
			<li>
				<label>in a position of power</label>
				<description>I feel important and everyone looks up to me.</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<PreceptDef>
		<defName>VME_Power_Preferred</defName>
		<issue>VME_Power</issue>
		<label>preferred</label>
		<description>It’s unthinkable to be considered a commoner. I want people to take my word seriously and put forth great effort not to disappoint me.</description>
		<impact>Medium</impact>
		<displayOrderInIssue>30</displayOrderInIssue>
		<displayOrderInImpact>100</displayOrderInImpact>
		<associatedMemes>
			<li>VME_Aristocratic</li>
		</associatedMemes>
		<comps>
			<li Class="PreceptComp_SituationalThought">
				<thought>VME_Power_Preferred</thought>
				<thoughtStageDescriptions>
					<li>Any ideo role</li>
				</thoughtStageDescriptions>
			</li>
		</comps>
	</PreceptDef>
	<ThoughtDef>
		<defName>VME_Power_Preferred</defName>
		<thoughtClass>Thought_Situational</thoughtClass>
		<workerClass>VanillaMemesExpanded.ThoughtWorker_Precept_Power_Preferred</workerClass>
		<stages>
			<li>
				<label>i am important</label>
				<description>I hold a reasonable position of power and I like that feeling</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>